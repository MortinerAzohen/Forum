@model Forum.ViewModels.Forum.ForumEditViewModel

<h1>Edit Forum</h1>

<form asp-action="EditForum" asp-controller="Forum" method="post" id="addPostForm">
    <div class="form-group">
        <label asp-for="Title">Current Title: @Model.Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Curent Description: @Model.Description</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ForumImg">Forum Image</label>
        <div class="custom-file">
            <input asp-for="ForumImg" class="form-control custom-file-input">
            <label class="custom-file-label">Choose file...</label>
        </div>
    </div>
    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" asp-for="@Model.ForumUrl" />
    <button type="submit" class="btn btn-secondary">Finish</button>
    <a class="btn btn-secondary" asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.Id">Cancel</a>
</form>