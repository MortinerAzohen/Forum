@model Forum.ViewModels.Reply.NewReplyModelView

<h1>Add Reply to | @Model.PostTitle</h1>
<div>
    Post Content: @Model.PostContent
</div>

<form asp-action="AddReply" asp-controller="Post" method="post" id="addPostForm">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReplyContent"></label>
        <input asp-for="ReplyContent" class="form-control" />
    </div>
    <button type="submit" id="submitPostBtn" class="btn btn-light">Submit Reply</button>
    <input type="hidden" asp-for="PostId" />
</form>