@model Forum.ViewModels.Posts.EditPostViewModel

<h1>Edit Post</h1>

<form asp-action="Edit" asp-controller="Post" method="post" id="addPostForm">
    <div class="form-group">
        <label asp-for="Title">@Model.Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Content">@Model.Content</label>
        <input asp-for="Content" class="form-control" />
    </div>
    <input type="hidden" asp-for="@Model.PostId" />
    <button type="submit" class="btn btn-secondary">Finish</button>
    <a class="btn btn-secondary" asp-controller="Post" asp-action="Index" asp-route-id="@Model.PostId">Cancel</a>
</form>