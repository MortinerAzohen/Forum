@model Forum.ViewModels.Administration.CreateRoleViewModel

    <div class=" container body-content ">
        <form class="pt-3" asp-controller="Administration" asp-action="CreateRole" method="post">

            <div class="form-group">
                <label for="roleNameInput">Enter a role name.</label>
                <input asp-for="RoleName" type="text" id="roleNameInput" placeholder="Role Name" />
            </div>
            <h4>
                Select Users to add them to new role:
            </h4>
            @foreach (var user in Model.Users)
            {
                <div class="form-check">

                    <input type="hidden" asp-for="@user.UserId" />
                    <input class="form-check-input" asp-for="@user.IsInNewRole" />
                    <label class="form-check-label">
                        @user.UserName
                    </label>
                </div>
            }
            <button type="submit" class="btn btn-secondary">Add</button>
            <a asp-controller="home" asp-action="index" class="btn btn-secondary">Cancel</a>
        </form>
    </div> 